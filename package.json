{
  "name": "toast-app-backend",
  "type": "module",
  "scripts": {
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 wrangler dev",
    "dev:remote": "NODE_TLS_REJECT_UNAUTHORIZED=0 wrangler dev --remote --compatibility-date=2025-04-18",
    "deploy": "NODE_TLS_REJECT_UNAUTHORIZED=0 wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:setup": "tsx src/scripts/setup-local.ts",
    "db:migrate": "tsx src/scripts/apply-migrations-remote.ts",
    "db:migrate:local": "wrangler d1 migrations apply toast-app-db --local",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seed-remote.ts",
    "db:seed:local": "tsx src/scripts/seed-local.ts",
    "db:clear": "tsx src/scripts/clear-remote.ts",
    "db:sync": "tsx src/scripts/sync-to-local.ts",
    "db:test": "tsx src/scripts/test-remote-connection.ts",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "lint": "biome lint .",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "biome:ci": "biome ci ."
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^24.8.1",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6",
    "wrangler": "^4.44.0"
  }
}
